# Humbu Ultimate Platform - Production Configuration
NODE_ENV=production
HTTP_PORT=8102
HTTPS_PORT=8143

# Security
JWT_SECRET=production-jwt-secret-key-2024-change-in-production
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=1000

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=../ssl/cert.pem
SSL_KEY_PATH=../ssl/key.pem

# Services
AI_AGENT_URL=http://127.0.0.1:8100/chat
BI_API_URL=http://127.0.0.1:8101/api/alerts
LOAD_BALANCER_URL=http://localhost:8000
DNS_SERVER_URL=http://localhost:5353

# Database
DB_PATH=./data/humbu_platform.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=3600000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
LOG_LEVEL=info
METRICS_ENABLED=true

# Deployment
DEPLOYMENT_ID=production_v1
BACKUP_ENABLED=true
AUTO_ROLLBACK_ENABLED=true
